<div id="chatroom_container" class="row bg-dark text-light">
  <div class="messages-container col-md-4 col-sm-4">
    <li class="list-group-item d-flex align-items-center justify-content-between user_list_item">
      <div class="icon-container">
        <%= link_to image_tag(current_user.chat_pfp, class: 'chat_pfp'), current_user %>
        <%= turbo_stream_from "user_status" %>
        <div>
          <%= render "users/status", user: current_user %>
        </div>
      </div>

      <div class="ms-2 me-auto username">
        <%= current_user.email%>
      </div>
    </li>

    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>

<div class="col-md-8 col-sm-8 bg-dark text-light">
  <% if @single_room %>
    <h4 class="text-center">
        <%= @user&.email || @single_room.name %>
    </h4>
    <%= turbo_stream_from @single_room %>
    <div id="messages" data-controller="scroll">
    <%= render @messages %>
  </div>
  <%= render partial: 'layouts/new_message_form' %>
    <% end %>
</div>